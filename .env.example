# Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# Slack Bot Configuration
# ============================================
# Get these from https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_APP_TOKEN=xapp-your-app-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here

# ============================================
# Gradio Application Settings
# ============================================
GRADIO_SERVER_PORT=7860
GRADIO_SERVER_NAME=0.0.0.0
GRADIO_SHARE=False

# Public URL for Gradio app (update after deployment)
GRADIO_URL=http://localhost:7860

# Optional: Enable authentication (format: username:password)
# GRADIO_AUTH=admin:securepassword

# ============================================
# MCP Server Configuration
# ============================================
# URL of your MCP server
MCP_SERVER_URL=http://localhost:8000

# Optional: API key if your MCP server requires authentication
# MCP_API_KEY=your-mcp-api-key

# ============================================
# Monitoring Settings
# ============================================
# How many days to retain logs
LOG_RETENTION_DAYS=7

# Maximum number of log entries to keep in memory
MAX_LOG_ENTRIES=1000

# Enable real-time streaming of updates
ENABLE_REAL_TIME_STREAMING=True

# ============================================
# UI Customization
# ============================================
# Theme: default, soft, monochrome, or custom
THEME=soft

# Path to custom CSS file
CUSTOM_CSS_PATH=static/custom_styles.css

# ============================================
# Database Configuration (Optional)
# ============================================
# If you want persistent storage, configure a database
# DATABASE_URL=postgresql://user:password@localhost/mcp_monitoring
# DATABASE_URL=sqlite:///mcp_monitoring.db

# ============================================
# Security Settings
# ============================================
# Enable authentication for the dashboard
ENABLE_AUTH=False

# Comma-separated list of allowed users (when ENABLE_AUTH=True)
# ALLOWED_USERS=user1@example.com,user2@example.com

# ============================================
# Advanced Settings
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR
# LOG_LEVEL=INFO

# Enable development mode
# DEBUG=False
